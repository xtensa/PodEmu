                    android:paddingLeft="8dp"
                    android:textColor="@color/settingsItemHint"
                    android:textStyle="italic"
                    android:text="@string/bluetoothEnableHint"
                    android:checkMark="?android:attr/listChoiceIndicatorMultiple"
